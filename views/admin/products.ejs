<%- include('../includes/head.ejs') %>
</head>
<body>
<%- include('../includes/navigation.ejs') %>

<main class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">List Products</h1>

  <% if (prods && prods.length > 0) { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% prods.forEach(prod => { %>
        <div class="bg-white border border-gray-200 rounded-xl shadow hover:shadow-xl transition-shadow duration-300 flex flex-col h-full">
          <a href="#" class="block overflow-hidden">
            <img src="<%= prod.imageUrl %>" alt="<%= prod.title %>" 
                 class="w-full h-48 object-cover transform hover:scale-105 transition-transform duration-300">
          </a>
          <div class="px-4 py-3 flex flex-col flex-grow">
            <h2 class="text-lg font-semibold text-gray-900 mb-2 hover:text-blue-600 transition-colors duration-300">
              <%= prod.title %>
            </h2>
            <p class="text-gray-700 mb-3 text-sm overflow-hidden" style="max-height:3.5rem;">
              <%= prod.description || 'No description provided.' %>
            </p>
            <div class="mt-auto flex items-center justify-between">
              <span class="text-xl font-bold text-gray-900"><%= prod.price || '$599' %></span>
              <form action="/delete-product" method="POST">
                <input type="hidden" name="id" value="<%= prod.id %>">
                <button type="submit"
                        class="bg-red-600 text-white font-medium px-4 py-2 rounded-lg
                               transform transition duration-300 ease-in-out
                               hover:bg-red-700 hover:scale-100 hover:shadow-lg">
                  Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <h2 class="text-2xl font-semibold text-gray-700 text-center mt-12">No Products Found!</h2>
  <% } %>
</main>

<%- include('../includes/end.ejs') %>
